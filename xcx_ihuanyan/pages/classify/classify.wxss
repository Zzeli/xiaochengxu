/* classify.wxss */

@import "../index/index.wxss";  
page,.page{
  height: 100%;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
      box-sizing: border-box;
}

.weui-search-bar{
  background: none;
  border: 0;
}
.details--item .image{
  width:350rpx;
  height: 350rpx;
  display: flex;
  align-items: flex-end;
}
.details--item{
  padding-bottom: 0;
  position: relative;
}
.details--item image{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
}

.opacity{
  width:100%;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
  opacity: 0.61;
  background-color: #000000;
  z-index: -1;
}
.name{
  width: 100%;
  padding-left: 0!important;
  height: 112rpx;
  position: relative;
  margin-bottom: 0!important;
  font-family: "微软雅黑";
  font-size: 30rpx!important;
  font-weight: 500!important;
  text-align: center!important;
  color: #f8f6f6!important;
  line-height: 112rpx;
  z-index: 1;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
    
    box-sizing: border-box;
}
.search{
  padding: 31rpx 0 0 19rpx;
  box-sizing: border-box;
  background: #fff;
  height: 91vh;
}
.search text{
   font-family: "微软雅黑";
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  color: #585757;
}
.search-list{
  width: 420rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 29rpx;
}
.search-item{
  width: 120rpx;
  height: 42rpx;
  border-radius: 20px;
  border: solid 1px #969595;
  font-family: "微软雅黑";
  font-size: 20rpx;
  font-weight: 500;
  text-align: center;
  color: #b9b6b6;
  line-height: 42rpx;
  margin-right: 17rpx;
  margin-bottom: 17rpx;
}
