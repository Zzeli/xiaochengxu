/* splash.wxss */

  .splash{
  position: fixed;
  left:0;
  top:0;
  width:100%;
  height: 100%;
  z-index: 9999999;
  background-position: top center;
  background-size: cover;

} 
.splash button{
  width: 21%;
  margin-top: 30rpx;
  margin-right: 30rpx;
  position: relative;
  background: none;
  padding: 0;
  line-height: 2.5;
  font-size: 22rpx;
  border:0;
}
.button-opacity{
  opacity: 0.5;
  width: 100%;
  height: 100%;
  position: absolute;
  background: #fff;
  left: 0;
  top:0;
  z-index: -1;
}